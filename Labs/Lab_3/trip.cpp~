#include <iostream>
#include <vector>
#include <sstream>
#include "trip.h"

using namespace std;

int main() {
    string input;
    vector<float> expenses;

    // Get the first input
    cout << "Enter expenses separated by spaces: ";
    getline(cin, input);
    
    // Parse the input string into floats
    stringstream ss(input);
    float expense;
    while (ss >> expense) {
        expenses.push_back(expense);
    }

    // Calculate and display the amount to change hands
    cout << "Amount to change hands: " << moneyEqualizer(expenses) << endl;

    return 0;
}
