CXX = g++

# Source files
SRCS = Labyrinth.cpp Main.cpp MazeGenerator.cpp

# Header files
HEADERS = Labyrinth.h MazeGenerator.h
TARGET = Labyrinth
OBJS = $(SRCS:.cpp=.o)

# Default target
all: $(TARGET)
$(TARGET): $(OBJS)
	$(CXX) -o $@ $^

# Compiling source files
%.o: %.cpp $(HEADERS)
	$(CXX) -c $< -o $@

# Clean up
clean:
	rm -f $(OBJS) $(TARGET)
